<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".controller.activitys.LoginActivity">

    <ImageView
        android:id="@+id/iconLogin"
        style="@style/iconImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_Login"
        style="@style/cardView_Login_create"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconLogin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                style="@style/title_page"
                android:text="@string/login" />

            <EditText
                android:id="@+id/tvEmail_Login"
                style="@style/editText_Style"
                android:autofillHints=""
                android:hint="@string/hint_Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/tvPassword_Login"
                style="@style/editText_Style"
                android:autofillHints=""
                android:hint="@string/hint_Password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btn_login"
                style="@style/button_Login_create_Style"
                android:text="@string/login" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>